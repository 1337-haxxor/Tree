Subject: [PATCH] Player elytra boost API


diff --git a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
index 2749b9d9857190abe992f9cec66a397570973e9b..547bfeb11edb1e00cbb135ffc20fc0dc55a27e6e 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
@@ -2085,6 +2085,20 @@ public class CraftPlayer extends CraftHumanEntity implements Player {
         }
         throw new RuntimeException("Unknown settings type");
     }
+
+    @Override
+    public org.bukkit.entity.Firework boostElytra(ItemStack firework) {
+        Validate.isTrue(isGliding(), "Player must be gliding");
+        Validate.isTrue(firework != null, "firework == null");
+        Validate.isTrue(firework.getType() == Material.FIREWORK_ROCKET, "Firework must be Material.FIREWORK_ROCKET");
+
+        net.minecraft.item.ItemStack item = org.bukkit.craftbukkit.inventory.CraftItemStack.asNMSCopy(firework);
+        net.minecraft.world.World world = ((CraftWorld) getWorld()).getHandle();
+        net.minecraft.entity.projectile.FireworkRocketEntity entity = new net.minecraft.entity.projectile.FireworkRocketEntity(world, item, getHandle());
+        return world.func_217376_c(entity)
+            ? (org.bukkit.entity.Firework) entity.getBukkitEntity()
+            : null;
+    }
