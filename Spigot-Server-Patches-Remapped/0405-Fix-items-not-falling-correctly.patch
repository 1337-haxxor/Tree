index 118fc4d2d8bb9260da73b40c7553a67179b6cd3c..f68f6ab2785a508e292a6db44d15f08c3eebf2e0 100644
--- a/src/main/java/net/minecraft/entity/item/ItemEntity.java
+++ b/src/main/java/net/minecraft/entity/item/ItemEntity.java
@@ -114,7 +114,7 @@ public class ItemEntity extends Entity {
                 }
             }
 
-            if (!this.field_70122_E || func_213296_b(this.func_213322_ci()) > 9.999999747378752E-6D || (this.field_70173_aa + this.func_145782_y()) % 4 == 0) {
+            if (!this.field_70122_E || func_213296_b(this.func_213322_ci()) > 9.999999747378752E-6D || this.field_70173_aa % 4 == 3) { // Paper - Ensure checking item movement is always offset from Spigot's entity activation range check
                 this.func_213315_a(MoverType.SELF, this.func_213322_ci());
